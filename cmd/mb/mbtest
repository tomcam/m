#!/bin/zsh
DIR=~/code/m/cmd/mb/theme-test
rm -rf $DIR
mb new site $DIR
INDEX=$DIR/index.md
LINKSECTION=$DIR/links.tmp

# Create an array of filenames
declare -a themes=(
	'wide'
	'pillar'
  'tradesman'
	)

# Create an array of variations
declare -a sidebars=(
  'left'
  'right'
  'no'
  )

# Array of modes
declare -a modes=(
  'dark'
  'light'
)

# Loop through the array
for file in "${themes[@]}";
do
  echo "## Theme: ${file}" >> $LINKSECTION
  for sidebar in "${sidebars[@]}";
  do
    for mode in "${modes[@]}";
    do
      FILENAME=theme-${file}-${sidebar}-${mode}
      echo ${FILENAME}.md
cat <<-EOM > $DIR/$FILENAME.md
---
Theme: ${file}
Sidebar: ${sidebar}
Mode: ${mode}
---
# Auto-generated test for ${file} theme

Here's what we know about the test.
* Theme is **${file}** Acording to frontmatter it's **{{ .Page.FrontMatter.Theme }}**
* Sidebar should be on the **${sidebar}**.
* Mode should be **${mode}**

**Note**

* Resize this to check for responsive versions
* Check in all browsers

#### Code example
````
print "hello, world."
````
EOM
LINK="[${sidebar} sidebar, ${mode} mode](${FILENAME}.html)\n"
echo $LINK >> $LINKSECTION


    done
  done
done
cat $LINKSECTION >> $INDEX
mb build $DIR
open $DIR/.mb/pub/index.html


# /Volumes/sandisk1/m
# To resgtore:
# mkdir ~/Users/tom/code/m
# cd ~/Users/tom/code/m
# cp -Rf /Volumes/sandisk1/m/.git .

VOLUME="/Volumes/sandisk1"
SOURCE="/Users/tom/code/m"
# DEST="${VOLUME}${SOURCE}"
DEST="${VOLUME}"
echo "Backing up to ${VOLUME}"
if mount | grep "on $VOLUME" ; then
  echo "Backing up ${SOURCE} to  ${DEST}"
  echo "Attempting to create dir ${DEST}"
  mkdir -p $DEST
  echo "About to:"
  echo "cp -v -R ${SOURCE} ${DEST}"
  # -R means copy directories & subdirectories
  # -v means verbose output
  cp -v -R ${SOURCE} ${DEST}
  echo "Copied to ${DEST}"
  ls -lat ${DEST}
  exit 0
else
    echo "Backup directory ${DIR} not available. Is the disk or flash drive mounted?"
    exit 1
fi
exit 0


